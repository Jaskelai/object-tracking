<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/color_727272</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_rounded_white</item>
    </style>

    <style name="ErrorDialogTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@color/color_727272</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="backgroundColor">@android:color/white</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
    </style>

    <style name="BtnWhiteBorder" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/selector_white_btn_background</item>
        <item name="strokeColor">@color/selector_white_btn_background</item>
        <item name="rippleColor">@android:color/white</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/text_m</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BtnRedBorder" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/color_error</item>
        <item name="strokeColor">@color/color_error</item>
        <item name="rippleColor">@color/color_error</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/text_m</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="EditTextLayoutWhite" parent="Widget.Design.TextInputLayout">
        <item name="boxStrokeColor">@android:color/white</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="android:textColorHint">@color/color_B3FFFFFF</item>
        <item name="helperTextTextAppearance">@style/HelperTextEditText</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="android:colorControlActivated">@android:color/white</item>
        <item name="android:colorAccent">@android:color/white</item>
    </style>

    <style name="HelperTextEditText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_s</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textSize">@dimen/text_s</item>
    </style>

    <style name="EditTextWhiteSignIn" parent="Widget.AppCompat.EditText">
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:textSize">@dimen/text_m</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="TitleAuth" parent="Widget.AppCompat.TextView">
        <item name="android:alpha">0.9</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_l</item>
    </style>

    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="NewItemEditText" parent="Widget.AppCompat.EditText">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineSpacingExtra">10sp</item>
        <item name="android:background">@null</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

</resources>
